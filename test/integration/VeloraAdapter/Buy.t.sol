pragma solidity ^0.8.26;

import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {IntegrationTestBase} from "../IntegrationTestBase.t.sol";
import {IVeloraAdapter} from "src/interfaces/periphery/IVeloraAdapter.sol";
import {VeloraAdapter} from "src/periphery/VeloraAdapter.sol";

contract VeloraAdapterForkTest is IntegrationTestBase {
    // swapExactAmountOut
    bytes buyCalldata =
        hex"";
    uint256 inputAmount = 1 ether;
    uint256 inputAmountOffset = 132;
    uint256 maxInputAmountOffset = 100;
    uint256 quotedInputAmountOffset = 164;
    uint256 expectedInputAmount = 4580.32128e6;

    function setUp() public override {
        super.setUp();
        vm.rollFork(34727190);
    }

    function testFork_buy_NoAdjustment() public {
        veloraAdapter = new VeloraAdapter(AUGUSTUS_REGISTRY);

        uint256 initialBalance = 1_000_000_000e6;

        deal(address(USDC), address(this), initialBalance);
        USDC.transfer(address(veloraAdapter), initialBalance);

        veloraAdapter.buy(
            AUGUSTUS_V6_2,
            buyCalldata,
            address(USDC),
            address(WETH),
            0,
            IVeloraAdapter.Offsets(inputAmountOffset, maxInputAmountOffset, 0),
            user
        );

        // Sender receives excess srcToken
        uint256 sold = initialBalance - IERC20(USDC).balanceOf(address(this));
        assertEq(sold, expectedInputAmount, "sold");

        assertEq(IERC20(WETH).balanceOf(user), inputAmount, "bought");
    }

    function testFork_buy_WithAdjustment() public {
        uint256 initialBalance = 1_000_000_000e6;
        uint256 newInputAmount = 1.1 ether;

        deal(address(USDC), address(this), initialBalance);
        USDC.transfer(address(veloraAdapter), initialBalance);

        veloraAdapter.buy(
            AUGUSTUS_V6_2,
            buyCalldata,
            address(USDC),
            address(WETH),
            newInputAmount,
            IVeloraAdapter.Offsets(inputAmountOffset, maxInputAmountOffset, 0),
            user
        );

        assertEq(IERC20(WETH).balanceOf(user), newInputAmount, "bought");

        // Sender receives excess srcToken
        uint256 sold = initialBalance - IERC20(USDC).balanceOf(address(this));
        assertEq(sold, 5038.378251e6, "sold");
    }
}
